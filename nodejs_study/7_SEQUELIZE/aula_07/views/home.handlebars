<div class="container">
    {{#each users}}
        <div class="item">
            <p>{{ this.name }}</p>
            <div class="actions">
                <a href="/users/{{this.id}}">Ver sobre</a>
                <form action="/users/delete/{{this.id}}" method="post">
                    <input type="submit" value="Excluir">
                </form>
                <a href="users/edit/{{this.id}}">Editar</a>
            </div>
        </div>
    {{/each}}
</div>
